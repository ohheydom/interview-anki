%div.row
  %div.small-7.columns
  %div.small-5.columns
    - if user_signed_in?
      %div.text-right
        = link_to('Logout', destroy_user_session_path, :method => :delete)
    - else
      = form_for('user', as: 'user', url: session_path('user')) do |f|
        %div.row
          %div.small-5.columns
            = f.label :email
            = f.email_field :email, autofocus: true
          %div.small-7.columns
            = f.label :password
            %div.input-group
              = f.password_field :password, { :class => 'input-group-field', autocomplete: 'off' }
              %div.input-group-button
                = f.submit 'Login', { class: :button }
      %div.signup
        = link_to('Signup', new_user_registration_path)
